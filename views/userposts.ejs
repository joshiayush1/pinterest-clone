<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinterest</title>
    <link rel="icon" href="/images/pinterest-icon.png" />
    <link rel="stylesheet" href="/stylesheets/userposts.css" />
</head>
<body>
    <% include ./nav.ejs%>
    <div class="cont">
        <div class="heading">
            <h2>Your All Pins</h2>
        </div>
        <div class="pins">
            <% user.posts.forEach(function(element){ %>
                <div class="pin">
                    <div>    
                        <a href="/profile/userposts/viewpost"><img src="/images/uploads/<%= element.image %>" alt=""></a>
                    </div>
                    <h5><%= element.postTitle %></h5>
                    <div class="itemsBelowImage">
                        <img src="/images/uploads/<%= posts.user.profilePicture %>" alt="">
                        <p><%= posts.user.username.toLowerCase() %></p>
                    </div>
                </div>
           <% }) %>
        </div>
    </div>
</body>
</html>