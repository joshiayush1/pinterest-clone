<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinterest</title>
    <link rel="icon" href="/images/pinterest-icon.png" />
    <link rel="stylesheet" href="/stylesheets/feed.css">
</head>
<body>
    <% include ./nav.ejs%>
    <div class="cont">
        <div class="pins">
            <% posts.forEach(function(element){ %>
                <div class="pin" data-post-id="element._id">
                    <div>
                        <a href="/profile/userposts/viewpost/<%= element._id %>" alt=""><img src="images/uploads/<%= element.image %>" alt=""></a>
                    </div>
                    <h5><%= element.postTitle %></h5>
                    <div class="itemsBelowImage">
                        <img src="/images/uploads/<%= element.user.profilePicture %>" alt="">
                        <p><%= element.user.username.toLowerCase() %></p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <script src="/javascripts/profile.js"></script>
</body>
</html>